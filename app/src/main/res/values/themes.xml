<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FilmPallette" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#97daf4</item>
        <item name="colorPrimaryVariant">#3b94ce</item>
        <item name="colorOnPrimary">#e5f6fd</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#f4b297</item>
        <item name="colorSecondaryVariant">#db5b1e</item>
        <item name="colorOnSecondary">#434343</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FilmPallette.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FilmPallette.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FilmPallette.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>